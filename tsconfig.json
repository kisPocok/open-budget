{
    "compileOnSave": true,
    "compilerOptions": {
        "rootDir": "app",
        "outDir": "dist-ts",
        "target": "es2019",
        "lib": [
            "es2019",
            "dom"
        ],
        "module": "commonjs",
        "esModuleInterop": true,
        "strict": true,
        "declaration": true,
        "sourceMap": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "dist-ts",
        "app/**/*.test.ts",
        "app/**/mocks/*.ts"
    ]
}
